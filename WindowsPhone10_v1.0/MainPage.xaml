<Page
    x:Class="WindowsPhone10_v1._0.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="20" Spacing="10">
        <TextBlock Text="My To-Do List" FontSize="28" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="TaskInput" Width="200" PlaceholderText="Enter a task..." />
            <Button Content="Add" Margin="10,0,0,0" Click="AddTask_Click"/>
        </StackPanel>

        <ListView x:Name="TaskList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="{Binding}" Checked="Task_Checked" Unchecked="Task_Checked"/>
                        <Button Content="❌" Click="DeleteTask_Click" Tag="{Binding}" Margin="10,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>

<Page
    x:Class="WindowsPhone10_v1._0.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#FF1E1E1E">

    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="10">
            <TextBlock Text="📝 My To-Do List"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal">
                <TextBox x:ConnectionId='5' x:Name="TaskInput"
                         Width="250"
                         PlaceholderText="Enter a task..." />
                <Button x:ConnectionId='6' Content="Add"                      />
            </StackPanel>

            <ListView x:ConnectionId='2' x:Name="TaskList"
                      Background="#FF2D2D30"
                      BorderBrush="Gray"
                      BorderThickness="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5"
                                    Background="#FF3A3A3A"
                                    Padding="10"
                                    CornerRadius="4">
                            <CheckBox Content="{Binding}" VerticalAlignment="Center"/>
                            <Button x:ConnectionId='4' Content="❌"
                                                            
                                    Tag="{Binding}"
                                    HorizontalAlignment="Right"
                                    Background="Crimson"
                                    Margin="10,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>


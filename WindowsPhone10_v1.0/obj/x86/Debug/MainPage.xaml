<Page
    x:Class="WindowsPhone10_v1._0.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="20" Spacing="10">
        <TextBlock Text="My To-Do List" FontSize="28" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal">
            <TextBox x:ConnectionId='6' x:Name="TaskInput" Width="200" PlaceholderText="Enter a task..." />
            <Button x:ConnectionId='7' Content="Add" Margin="10,0,0,0"                      />
        </StackPanel>

        <ListView x:ConnectionId='2' x:Name="TaskList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:ConnectionId='4' Content="{Binding}"                                                />
                        <Button x:ConnectionId='5' Content="❌"                          Tag="{Binding}" Margin="10,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>

